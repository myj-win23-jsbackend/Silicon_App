@page "/notification"
@using System.ComponentModel.DataAnnotations

<PageTitle>Notification</PageTitle>

<div class="profile-notifications">
    <div class="container">

        <div class="profile-info">
            <div class="profile-image-changer">
                <img src="images/profile-image.jpg" alt="Profile image">
                <div class="image-changer">
                    <i class="fa-solid fa-arrows-rotate-reverse"></i>
                </div>
            </div>
            <div class="profile-name-email">
                <h5>John Doe</h5>
                <p id="profile-email">example@gmail.com</p>
            </div>

            <div class="logged-in-navbar">
                <button class="navbar-menu">
                    <i class="fa-regular fa-gear"></i>
                    <p>Account Details</p>
                </button>
                <button class="navbar-menu">
                    <i class="fa-regular fa-lock"></i>
                    <p>Security</p>
                </button>
                <button class="navbar-menu" id="blue-button-background">
                    <i class="fa-regular fa-bell"></i>
                    <p>Notifications</p>
                </button>
                <button class="navbar-menu">
                    <i class="fa-regular fa-message"></i>
                    <p>Messages</p>
                </button>
                <button class="navbar-menu">
                    <i class="fa-regular fa-bookmark"></i>
                    <p>Saved Items</p>
                </button>
                <button class="navbar-menu">
                    <i class="fa-regular fa-arrow-left-from-bracket"></i>
                    <p>Sign Out</p>
                </button>
            </div>
        </div>

        <div class="email-notifications">
            <h2>Notifications</h2>
            <div class="user-email">
                <p>Preferred email for notifications</p>
                <EditForm Model="notificationModel" OnValidSubmit="SaveChanges">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <InputText type="email" @bind-Value="notificationModel.Email" id="email" placeholder="example@gmail.com" required class="form-control" />

                    <!--Toggle and subscribe section -->
                    <div class="toggle-box">
                        <InputCheckbox @bind-Value="notificationModel.SubscribeToNewsletter" id="check1" class="form-control" />
                        <label for="check1" class="button"></label>
                        <div class="toggle-description">
                            <h6>Subscribe to Newsletter</h6>
                            <p>Nec, posuere non felis duis massa vitae aliquet interdum scelerisque. Neque ullamcorper.</p>
                        </div>
                    </div>
                    <div class="toggle-box">
                        <InputCheckbox @bind-Value="notificationModel.UseDarkMode" id="check2" class="form-control" />
                        <label for="check2" class="button"></label>
                        <div class="toggle-description">
                            <h6>Use Dark Mode Theme in Application</h6>
                            <p>Tortor massa porttitor enim tristique neque fermentum sed.</p>
                        </div>
                    </div>

                    <div class="save-cancel-btn">
                        <button type="button" @onclick="Cancel">Cancel</button>
                        <button type="submit" id="save">Save changes</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private NotificationModel notificationModel = new();

    private void SaveChanges()
    {
        // Implement the logic to save changes
    }

    private void Cancel()
    {
        // Implement the logic to handle cancel action
    }

    private class NotificationModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = null!;

        public bool SubscribeToNewsletter { get; set; }
        public bool UseDarkMode { get; set; }
    }
}





























